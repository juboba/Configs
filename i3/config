# start dmenu (a program launcher)
bindsym $mod+p exec rofi -show run -lines 3 -eh 2 -width 100 -padding 800 -opacity "85" -bw 0 -bc "$background" -bg "$background" -fg "$active_text" -hlbg "$background" -font "Monaco" -disable-history -levenshtein-sort
